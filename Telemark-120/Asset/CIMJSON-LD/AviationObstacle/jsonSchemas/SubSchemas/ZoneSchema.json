{
    "type": "object",
    "required": [
        "@id",
        "@type",
        "cim:IdentifiedObject.mRID",
        "nc-no:Zone.zoneKind",
        "nc-no:Zone.state",
        "geo:hasGeometry"
    ],
    "additionalProperties": false,
    "properties": {
        "@id": {
            "type": "string",
            "format": "uri",
            "pattern": "^urn:uuid:[0-9a-fA-F]{8}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{12}$",
            "message": {
                "pattern": "String does not validate against format 'uuid'."
            }
        },
        "@type": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": [
                    "nc-no:Zone",
                    "geo:Feature"
                ]
            }
        },
        "cim:IdentifiedObject.mRID": {
            "type": "string",
            "format": "uuid"
        },
        "cim:IdentifiedObject.description": {
            "type": "string"
        },
        "cim:IdentifiedObject.name": {
            "type": "string"
        },
        "nc-no:Zone.zoneKind": {
            "type": "object",
            "required": [
                "@id"
            ],
            "properties": {
                "@id": {
                    "type": "string",
                    "format": "uri",
                    "enum": [
                        "nc-no:ZoneKind.electricalNetwork",
                        "nc-no:ZoneKind.other",
                        "nc-no:ZoneKind.specialRestrictionLand",
                        "nc-no:ZoneKind.weatherZone",
                        "nc-no:ZoneKind.substation"
                    ]
                }
            }
        },
        "nc-no:Zone.state": {
            "type": "object",
            "required": [
                "@id"
            ],
            "properties": {
                "@id": {
                    "type": "string",
                    "format": "uri",
                    "enum": [
                        "nc-no:ZoneStateKind.notYetRegistered",
                        "nc-no:ZoneStateKind.registered",
                        "nc-no:ZoneStateKind.removed",
                        "nc-no:ZoneStateKind.notYetRemoved"
                    ]
                }
            }
        },
        "geo:hasGeometry": {
            "type": "object",
            "properties": {
                "geo:asWKT": {
                    "type": "object",
                    "properties": {
                        "@value": {
                            "type": "string"
                        },
                        "@type": {
                            "type": "string"
                        }
                    }
                },
                "geo:asGeoJSON": {
                    "type": "object",
                    "properties": {
                        "@value": {
                            "type": "string"
                        },
                        "@type": {
                            "type": "string"
                        }
                    }
                },
                "geo:asGML": {
                    "type": "object",
                    "properties": {
                        "@value": {
                            "type": "string"
                        },
                        "@type": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}